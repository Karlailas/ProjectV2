{% extends 'base.html.twig' %}


{% block title %}Items{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_signedin_page') }}">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">xcfs</span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
        </div>
        <div>
            {% if app.user %}
                Logged in as {{ app.user.username }}
                <ul>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </nav>
<div class="container">

<h1>Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ item.photo }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ item.created ? item.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Changed</th>
                <td>{{ item.changed ? item.changed|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Condition</th>
                <td>{{ item.condition }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_items_index') }}">back to list</a>

    <a href="{{ path('app_items_edit', {'id': item.id}) }}">edit</a>

    {{ include('items/_delete_form.html.twig') }}
{% endblock %}
